html
  head
  body
    h1 Posts
    ul
      each title in titles
        li= title

    form(action="/create" method="POST")
      label(for="title") Title:
      br
      input(type="text" id="ftitlename" name="title" size=30)
      br
      label(for="body") Body:
      br
      textarea(id="body" name="body" rows="10" cols="30")
      br
      input(type="submit" value="Create")
